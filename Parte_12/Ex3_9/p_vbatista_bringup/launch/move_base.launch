<launch>
    <arg name="player_name" default="p_vbatista"/>
    <group ns="$(arg player_name)">
        <node pkg="move_base" type="move_base" respawn="false" name="$(arg player_name)" output="screen">
            <rosparam file="$(find assignment3_prep)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
            <rosparam file="$(find assignment3_prep)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
            <rosparam file="$(find assignment3_prep)/param/local_costmap_params.yaml" command="load" />
            <rosparam file="$(find assignment3_prep)/param/global_costmap_params.yaml" command="load" />
            <rosparam file="$(find assignment3_prep)/param/base_local_planner_params.yaml" command="load" />

            <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
            <param name="controller_frequency" value="10.0" />
        </node>
    </group>
</launch>